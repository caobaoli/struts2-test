<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    
    <package name="struts-fileDownload" namespace="/files" extends="struts-default">
        <action name="show_download" class="com.lxp.web.action.FileDownloadAction" method="showDownload">
        	<result>/WEB-INF/views/files/show_down.jsp</result>
        </action>
        
        <action name="download" class="com.lxp.web.action.FileDownloadAction" method="download">
        	<result type="stream">
        		<param name="inputName">inputStream</param>
        		<param name="contentDispostion">attachment;filename="${fileName}"</param>
        		<param name="bufferSize">1024</param>
        	</result>
        </action>
    </package>

</struts>
