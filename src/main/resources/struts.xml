<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<!-- 动态方法调用的配置，默认struts2.x已经被禁掉了，官方不建议使用(即false) -->
    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.action.extension" value="action,,do,go"></constant>
    <constant name="struts.devMode" value="true" />
    <include file="struts-*"></include>
	
	<!-- 默认的namespace -->
	<package name="default" namespace="" extends="struts-default">
		<!-- 默认的action -->
		<default-action-ref name="default-action"></default-action-ref>
		<action name="default-action">
			<result type="redirect">/index.jsp</result>
		</action>
	</package>
</struts>
